nextflow_process {

    name "Test Process BUNDLE_LABELMAP"
    script "../main.nf"
    process "BUNDLE_LABELMAP"

    tag "modules"
    tag "modules_nfcore"
    tag "bundle"
    tag "bundle/labelmap"

    tag "subworkflows/load_test_data"

    setup {
        run("fetch_bundleseg_atlas", alias: "LOAD_DATA") {
            script "../../../../../subworkflows/bundle_seg/main.nf"
            process {
                """
                input[0] = "https://zenodo.org/records/10103446/files/atlas.zip?download=1"
                input[1] = "https://zenodo.org/records/10103446/files/config.zip?download=1"
                input[2] = "./"
                """
            }
        }

    }

    test("bundle - labelmap") {

        when {
            process {
                """
                input[0] = file(params.test_data['sarscov2']['illumina']['test_single_end_bam'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
