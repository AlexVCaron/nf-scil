process {
    withName: "TRACTOGRAM_RESAMPLE" {
        publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
        ext.never_upsample = true
        ext.seed = 1234
        ext.point_wise_std = 1
        ext.tube_raidus = 1
        ext.gaussian = 5
        ext.error_rate = 0.1
        ext.keep_invalid = true
        ext.downsample_per_cluster = false
    }
}