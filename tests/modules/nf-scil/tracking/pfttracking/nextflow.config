        publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
        ext.pft_random_seed = 0
        ext.pft_compress_streamlines = true
        ext.pft_compress_value = 0.2
        ext.pft_algo = "prob"
        ext.pft_seeding = "npv"
        ext.pft_nbr_seeds = 10
        ext.pft_step = 0.5
